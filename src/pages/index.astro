---
import Layout from "../layouts/Layout.astro";
import { Button } from "@components/Button";
import { Card } from "@components/Card";
import { FcAddRow } from "react-icons/fc";
import { FcTodoList } from "react-icons/fc";
import { GrCalendar } from "react-icons/gr";
import { Navbar } from "@components/Navbar";
import { SearchBar } from "@components/SearchBar";
---

<Layout title="Must Do">
  <div class="flex flex-row gap-10 px-10 items-center h-24 pb-7">
    <SearchBar className="grow" />
    <a class="text-2xl"><GrCalendar /></a>
  </div>
  <Card>
    <div class="flex flex-col h-full gap-10 pl-5 pt-2">
      <a class="text-xl font-black">Let's Set-Up Your Live Now!!</a>
      <Button>Get Started</Button>
    </div>
    <h1 class="grow text-5xl">My Image</h1>
  </Card>
  <div class="grid grid-cols-2 grid-rows-3 px-10 h-[40vh] gap-5">
    <div
      class="flex flex-col items-center justify-center bg-gray-100 text-lg row-span-1 rounded-[30px]"
    >
      View Calendar
    </div>
    <div
      class="flex flex-col items-center justify-center bg-gray-100 text-lg row-span-2 rounded-[30px] gap-5 px-5 text-center"
    >
      <a class="text-6xl">
        <FcTodoList />
      </a>
      <p>View Today Task</p>
    </div>
    <div
      class="flex flex-col items-center justify-center bg-gray-100 text-lg row-span-2 rounded-[30px] gap-5 px-10 text-center"
    >
      <FcAddRow className="text-6xl" />
      <p>Add New Task</p>
    </div>
    <div
      class="flex flex-col items-center justify-center bg-gray-100 text-lg row-span-1 rounded-[30px]"
    >
      <p>View My Stats</p>
    </div>
  </div>
  <Navbar />
</Layout>
